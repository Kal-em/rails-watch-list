<div class="body">
  <h2>My list</h2>
  <div class="container">
    <% @lists.each do |list| %>
      <a href="<%= list_path(list) %>">
        <div class='card-home :hover' <% if list.photo.attached? %> style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')" <% end %>>
          <h3><%=list.name%></h3>
        </div>
      </a>
    <% end %>
  </div>
  <div class="button-create"><%= link_to "New list", new_list_path%></div>
</div>
