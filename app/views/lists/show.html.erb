<div class='background-all'>
  <div class="body-show">
          <h1 class='spacing'><%= @list.name %></h1>
        <div class="container">
          <% @list.movies.each do |movie| %>
           <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <div class="card-container">
            <div class="movie-header">
              <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list?"} do %>
              <i class="fa-solid fa-trash-can" style="color: $text;"></i>
              <% end %>
              <p><%= movie.title %></p>
            </div>
            <div class="card" style="background-image: url('<%= movie.poster_url %>');">
            <div class="content">
              <p class="heading"><%= movie.title %></p>
              <p>Rating: <%= movie.rating %>/10</p>
              <span class="overview"><%= movie.overview %></span>
            </div>
          </div>
          </div>
          <% end %>
        </div>

  <button class="button-add-movie">
  <i class="fa-solid fa-film" style="color: #ffffff;"></i>
  <%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
  </button>
  </div>
</div>
